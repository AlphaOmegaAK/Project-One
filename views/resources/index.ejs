<html lang="en">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/navbar') %>
<!-- Main -->
    <main>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h2>Javascript</h2>
